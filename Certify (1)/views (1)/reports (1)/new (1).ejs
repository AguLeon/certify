<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Report</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/reports" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="brand">Brand</label>
                <input class="form-control" type="text" id="brand" name="report[brand]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="model">Model</label>
                <input class="form-control" type="text" id="model" name="report[model]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="year">Year</label>
                <input class="form-control" type="text" id="year" name="report[year]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="report[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group mt-3">
                    <label for="condition" class="form-label">Condition (1 to 10)</label>
                    <input type="range" class="form-range" min="1" max="10" step="1" id="condition"
                        name="report[condition]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="report[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="report[image]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3 text-center">
                <button class="btn btn-lg btn-success">Add Report</button>
            </div>
        </form>
        <a href="/reports">Back to <strong>All Reports</strong></a>
    </div>
</div>