<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit Report</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/reports/<%=report._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="brand">Brand</label>
                <input class="form-control" type="text" id="brand" name="report[brand]" value="<%=report.brand %>">
            </div>
            <div class="mb-3">
                <label for="model">Model</label>
                <input class="form-control" type="text" id="model" name="report[model]" value="<%=report.model %>">
            </div>
            <div class="mb-3">
                <label for="year">Year</label>
                <input class="form-control" type="text" id="year" name="report[year]" value="<%=report.year %>">
            </div>
            <div class="mb-3">
                <label for="location">Location</label>
                <input class="form-control" type="text" id="location" name="report[location]"
                    value="<%= report.location%>">
            </div>
            <div class="mb-3">
                <!-- <label class="form-label" for="condition">Condition</label>
                <div class="input-group">
                    <span class="input-group-text" id="condition-label">â˜…</span>
                    <input type="text" class="form-control" id="condition" placeholder="0" aria-label="condition"
                        aria-describedby="condition-label" name="report[condition]" value="<%= report.condition %>">
                </div> -->
                <div class="input-group mt-3">
                    <label for="condition" class="form-label">Condition (1 to 10)</label>
                    <input type="range" class="form-range" min="1" max="10" step="1" id="condition"
                        name="report[condition]" value="<%= report.condition %>">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="report[description]"><%= report.description %> </textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
            <div class="mb-3">
                <% report.images.forEach(function(img, i) { %>
                <div>
                    <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" name="deleteImages[]"
                            value="<%= img.filename %>" id="image-<%= i %>">
                        <label class="form-check-label" for="image-<%= i %>">Delete</label>
                    </div>
                </div>
                <% }) %>
            </div>
            <div class="mb-3 text-center">
                <button class="btn btn-lg btn-info">Update Report</button>
            </div>
        </form>
        <a href="/reports/<%= report._id%>">Back to Reports</a>
    </div>
</div>